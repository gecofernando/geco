$(document).ready(function(){
  $(".thumb1").click(function(){
    $(".content").hide();
    $("#illus1").show();
    return false;
  });
});

$(document).ready(function(){
  $("#illus1").click(function(){
    $("#illus1").hide();
    $(".content").show();
    return false;
  });
});


// set img height = window height
function set_body_height() { 
$('.illustration').height($(window).height());
  }
  $(document).ready(function() {
    $(window).bind('resize', set_body_height);
    set_body_height();
  });


$('#close1').click(function(){
$('#content').show();$('#area1').hide();;
return false;
});
